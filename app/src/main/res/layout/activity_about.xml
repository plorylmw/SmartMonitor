<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@drawable/bg_about" >

        <LinearLayout
            android:id="@+id/LParent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/content_description_logo_app"
                android:src="@drawable/logo_app" />

            <TextView
                android:id="@+id/TVAboutText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:gravity="center"
                android:maxWidth="450dp"
                android:selectAllOnFocus="false"
                android:text="@string/about_text_title"
                android:shadowColor="@color/white"
                android:shadowDx="1.0"
                android:shadowDy="1.0"
                android:shadowRadius="0.0"
                android:textSize="16sp"
                android:textColor="@color/White" />
        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/LNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/gradient_nb"
        android:visibility="gone" />

</merge>